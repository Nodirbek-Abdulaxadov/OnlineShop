@{
    ViewData["Title"] = "Home Page";
    Layout = "_Layout"; 
}
@model List<CategoryViewModel>

<div class="d-flex justify-content-between mt-3 com-header">
    <h4>Kategoriyalar ro'yxati</h4>
    <span class="btn btn-success"><i class="las la-plus"></i> Yangi qo'shish</span>
</div>
<hr>
<div class="row mt-5 d-flex justify-content-center">
    @foreach (var item in Model)
   {
    <div class="card col-xs-6 col-sm-2 card-stil">
    <span class="las la-shopping-bag icon"></span>
        <div class="card-body">
            <a asp-controller="home" asp-action="products" asp-route-id="@item.Id" class="btn btn-primary">@item.Name<span class="las la-arrow-right"></span></a>
        </div>
    </div>
   }
</div> 
